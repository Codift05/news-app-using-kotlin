<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:backgroundTint="@color/surface"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/divider">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/ivNewsImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:contentDescription="News Image"
            android:scaleType="centerCrop"
            android:background="@color/light_gray"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:src="@drawable/ic_placeholder" />

        <TextView
            android:id="@+id/tvNewsTitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:textColor="@color/text_primary"
            android:textSize="15sp"
            android:lineSpacingExtra="2dp"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/ivNewsImage"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="News Title Here that spans multiple lines for better display" />

        <TextView
            android:id="@+id/tvNewsSource"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/text_tertiary"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            app:layout_constraintStart_toEndOf="@+id/ivNewsImage"
            app:layout_constraintTop_toBottomOf="@+id/tvNewsTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            tools:text="The Times of India" />

        <TextView
            android:id="@+id/tvNewsDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="6dp"
            android:textColor="@color/text_tertiary"
            android:textSize="12sp"
            android:fontFamily="sans-serif"
            app:layout_constraintStart_toEndOf="@+id/tvNewsSource"
            app:layout_constraintTop_toTopOf="@+id/tvNewsSource"
            app:layout_constraintBottom_toBottomOf="@+id/tvNewsSource"
            tools:text="â€¢ 30 Nov 2025, 21:53" />

        <TextView
            android:id="@+id/tvNewsDescription"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone"
            tools:text="Hidden description" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
